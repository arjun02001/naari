<Window x:Class="Naari.Windows.ProfitByDate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:toolKit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended"
        Title="ProfitByDate" Height="500" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="5" Text="From" VerticalAlignment="Center"></TextBlock>
                <toolKit:DateTimePicker Margin="5" x:Name="uiFromDate" Width="180"></toolKit:DateTimePicker>
                <TextBlock Margin="5" Text="To" VerticalAlignment="Center"></TextBlock>
                <toolKit:DateTimePicker Margin="5" x:Name="uiToDate" Width="180"></toolKit:DateTimePicker>
            </StackPanel>
            <Button x:Name="uiSubmit" Margin="5" Content="Submit" Click="uiSubmit_Click" Width="120" HorizontalAlignment="Right"></Button>
        </StackPanel>
        <Grid Grid.Row="1">
            <DataGrid x:Name="uiDataGrid" AlternatingRowBackground="AliceBlue" AlternationCount="2" CanUserResizeColumns="True" CanUserSortColumns="True"></DataGrid>
        </Grid>
    </Grid>
</Window>
